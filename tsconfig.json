{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "strictNullChecks": true,
    "noStrictGenericChecks": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules/",
    "**/__tests__/*"
  ]
}
